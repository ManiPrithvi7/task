{
  "name": "mqtt-publisher-lite",
  "version": "1.0.0",
  "description": "Lightweight MQTT Publisher for firmware testing - no external dependencies",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "ts-node src/test.ts",
    "clean": "rm -rf dist data/*.json"
  },
  "keywords": [
    "mqtt",
    "firmware",
    "testing",
    "lightweight"
  ],
  "author": "StatsMQTT Team",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.3.0",
    "express": "^4.18.0",
    "ws": "^8.13.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.0",
    "winston": "^3.10.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/ws": "^8.5.0",
    "@types/cors": "^2.8.0",
    "@types/compression": "^1.7.0",
    "typescript": "^5.1.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  }
}
